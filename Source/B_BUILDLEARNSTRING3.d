func string B_BUILDLEARNSTRING3(var string TEXT, var int KOSTEN, var int MAGICOREKOSTEN) {
    var string CONCATTEXT;
    CONCATTEXT = CONCATSTRINGS(TEXT, PRINT_KOSTEN);
    CONCATTEXT = CONCATSTRINGS(CONCATTEXT, INTTOSTRING(KOSTEN));
    CONCATTEXT = CONCATSTRINGS(CONCATTEXT, PRINT_LP2);
    CONCATTEXT = CONCATSTRINGS(CONCATTEXT, INTTOSTRING(MAGICOREKOSTEN));
    if ((MAGICOREKOSTEN) == (1)) {
        CONCATTEXT = CONCATSTRINGS(CONCATTEXT, PRINT_MO1);
    };
    CONCATTEXT = CONCATSTRINGS(CONCATTEXT, PRINT_MO2);
    return CONCATTEXT;
}

