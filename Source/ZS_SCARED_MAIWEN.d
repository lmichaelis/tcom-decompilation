func void ZS_SCARED_MAIWEN() {
    PERCEPTION_SET_ONLYDIALOGUE();
    B_RESETALL(SELF);
    MDL_APPLYOVERLAYMDS(SELF, "Humans_SCARED.mds");
    if (!(C_BODYSTATECONTAINS(SELF, BS_SIT))) {
        AI_SETWALKMODE(SELF, NPC_RUN);
        if ((NPC_GETDISTTOWP(SELF, SELF.WP)) > (TA_DIST_SELFWP_MAX)) {
            AI_GOTOWP(SELF, SELF.WP);
        };
    };
}

func int ZS_SCARED_MAIWEN_LOOP() {
    if ((NPC_ISONFP(SELF, "SCARED")) && (!(C_BODYSTATECONTAINS(SELF, BS_SIT)))) {
        AI_ALIGNTOFP(SELF);
        AI_TURNTONPC(SELF, HERO);
        AI_PLAYANIBS(SELF, "T_STAND_2_PRAY", BS_SIT);
    };
    if ((WLD_ISFPAVAILABLE(SELF, "SCARED")) && (!(C_BODYSTATECONTAINS(SELF, BS_SIT)))) {
        AI_GOTOFP(SELF, "SCARED");
        AI_STANDUP(SELF);
        AI_ALIGNTOFP(SELF);
    };
    return LOOP_CONTINUE;
}

func void ZS_SCARED_MAIWEN_END() {
    AI_PLAYANIBS(SELF, "T_PRAY_2_STAND", BS_STAND);
}

func void REMOVESCAREDMAIWENOVERLAY() {
    MDL_REMOVEOVERLAYMDS(SELF, "Humans_Scared.mds");
}

