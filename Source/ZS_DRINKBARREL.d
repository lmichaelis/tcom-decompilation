func void ZS_DRINKBARREL() {
    PERCEPTION_SET_NORMAL();
    B_RESETALL(SELF);
    if (!(C_BODYSTATECONTAINS(SELF, BS_SIT))) {
        AI_SETWALKMODE(SELF, NPC_WALK);
        if ((HLP_STRCMP(NPC_GETNEARESTWP(SELF), SELF.WP)) == (FALSE)) {
            AI_GOTOWP(SELF, SELF.WP);
        };
    };
}

func int ZS_DRINKBARREL_LOOP() {
    if ((!(C_BODYSTATECONTAINS(SELF, BS_SIT))) && (WLD_ISMOBAVAILABLE(SELF, "BARRELCONTAINER"))) {
        AI_USEMOB(SELF, "BARRELCONTAINER", 1);
    };
    if ((C_BODYSTATECONTAINS(SELF, BS_SIT)) && ((NPC_GETSTATETIME(SELF)) > (7))) {
        AI_PLAYANIBS(SELF, "R_BARRELCONTAINER_DRINK", BS_SIT);
        NPC_SETSTATETIME(SELF, 0);
    };
    return LOOP_CONTINUE;
}

func void ZS_DRINKBARREL_END() {
    AI_USEMOB(SELF, "BARRELCONTAINER", -(1));
}

