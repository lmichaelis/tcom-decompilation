const int SPL_COST_SUMMONGOLEM = 80;
instance SPELL_SUMMONGOLEM(C_SPELL_PROTO) {
    C_SPELL_PROTO();
    TIME_PER_MANA = 0;
    SPELLTYPE = SPELL_BAD;
    TARGETCOLLECTALGO = TARGET_COLLECT_NONE;
}

func int SPELL_LOGIC_SUMMONGOLEM(var int MANAINVESTED) {
    if ((NPC_GETACTIVESPELLISSCROLL(SELF)) && ((SELF.ATTRIBUTE[2]) >= (SPL_COST_SCROLL3))) {
        return SPL_SENDCAST;
    };
    if ((SELF.ATTRIBUTE[2]) >= (SPL_COST_SUMMONGOLEM)) {
        return SPL_SENDCAST;
    };
    return SPL_SENDSTOP;
}

func void SPELL_CAST_SUMMONGOLEM() {
    if (NPC_GETACTIVESPELLISSCROLL(SELF)) {
        SELF.ATTRIBUTE[2] = (SELF.ATTRIBUTE[2]) - (SPL_COST_SCROLL3);
    };
    SELF.ATTRIBUTE[2] = (SELF.ATTRIBUTE[2]) - (SPL_COST_SUMMONGOLEM);
    if (NPC_ISPLAYER(SELF)) {
        B_CHECKSUMMONEDSTATUS();
        WLD_SPAWNNPCRANGE(SELF, 0xc723, 1, 0x43fa0000);
    };
    WLD_SPAWNNPCRANGE(SELF, 0xc719, 1, 0x43fa0000);
    SELF.AIVAR[20] += 1;
}

