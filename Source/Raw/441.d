            AI_STARTFACEANI(SELF, S_SMUG, 1, -(1));
            B_SAY(SELF, OTHER, "$AMB_WOLFSONS_WHATSNEW_CH4_POSTCRAWLERS_01");
        } else {
            AI_STARTFACEANI(SELF, S_SMUG, 1, -(1));
            B_SAY(SELF, OTHER, "$AMB_WOLFSONS_WHATSNEW_CH1TO3_01");
        } else {
            /* set_instance(0) */;
        };
    };
    if ((KAPITEL) == (5)) {
        AI_STARTFACEANI(SELF, S_TIRED, 1, -(1));
        B_SAY(SELF, OTHER, "$AMB_WOLFSONS_WHATSNEW_CH5_01");
    };
    AI_RESETFACEANI(OTHER);
