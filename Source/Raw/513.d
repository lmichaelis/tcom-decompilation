const int SPL_COST_SUMMONWOLF = 30;
instance SPELL_SUMMONWOLF(C_SPELL_PROTO) {
    C_SPELL_PROTO();
    TIME_PER_MANA = 0;
    TARGETCOLLECTALGO = TARGET_COLLECT_NONE;
}

func int SPELL_LOGIC_SUMMONWOLF(var int MANAINVESTED) {
    if ((NPC_GETACTIVESPELLISSCROLL(SELF)) && ((SELF.ATTRIBUTE[2]) >= (SPL_COST_SCROLL))) {
        return SPL_SENDCAST;
    };
    if ((SELF.ATTRIBUTE[2]) >= (SPL_COST_SUMMONWOLF)) {
        return SPL_SENDCAST;
    };
    return SPL_SENDSTOP;
}

func void SPELL_CAST_SUMMONWOLF() {
    if (NPC_GETACTIVESPELLISSCROLL(SELF)) {
        SELF.ATTRIBUTE[2] = (SELF.ATTRIBUTE[2]) - (SPL_COST_SCROLL);
    };
    SELF.ATTRIBUTE[2] = (SELF.ATTRIBUTE[2]) - (SPL_COST_SUMMONWOLF);
    if (NPC_ISPLAYER(SELF)) {
        B_CHECKSUMMONEDSTATUS();
        WLD_SPAWNNPCRANGE(SELF, 0xc789, 1, 0x43fa0000);
    };
    WLD_SPAWNNPCRANGE(SELF, 0xc77e, 1, 0x43fa0000);
    SELF.AIVAR[20] += 1;
}

