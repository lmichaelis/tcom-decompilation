func void ZS_STAND_DRINKING_POISON() {
    PERCEPTION_SET_INTROVERT();
    B_RESETALL(SELF);
    AI_SETWALKMODE(SELF, NPC_WALK);
    if ((NPC_GETDISTTOWP(SELF, SELF.WP)) > (TA_DIST_SELFWP_MAX)) {
        AI_GOTOWP(SELF, SELF.WP);
    };
    if ((NPC_HASITEMS(SELF, 0x9562)) == (0)) {
        CREATEINVITEM(SELF, 0x9562);
    };
    SELF.AIVAR[19] = NOTINPOS;
}

func int ZS_STAND_DRINKING_POISON_LOOP() {
    if (NPC_ISONFP(SELF, "STAND")) {
        AI_ALIGNTOFP(SELF);
        if ((SELF.AIVAR[19]) == (NOTINPOS_WALK)) {
            SELF.AIVAR[19] = NOTINPOS;
        };
    };
    if (WLD_ISFPAVAILABLE(SELF, "STAND")) {
        AI_GOTOFP(SELF, "STAND");
        AI_STANDUP(SELF);
        AI_ALIGNTOFP(SELF);
        SELF.AIVAR[19] = NOTINPOS_WALK;
    };
    AI_ALIGNTOWP(SELF);
    if ((SELF.AIVAR[19]) == (NOTINPOS_WALK)) {
        SELF.AIVAR[19] = NOTINPOS;
    };
    if ((SELF.AIVAR[19]) == (NOTINPOS)) {
        AI_USEITEMTOSTATE(SELF, 0x9562, 0);
    };
    SELF.AIVAR[19] = ISINPOS;
    if ((HEISALREADYDEAD) == (0)) {
        AI_PLAYANIBS(SELF, "T_POTION_RANDOM_1", BS_ITEMINTERACT);
        AI_PLAYANIBS(SELF, "T_POTION_RANDOM_1", BS_ITEMINTERACT);
        AI_PLAYANIBS(SELF, "T_POTION_RANDOM_1", BS_ITEMINTERACT);
        AI_WAIT(SELF, 0x40000000);
        HEISALREADYDEAD = 1;
    };
    if ((HEISALREADYDEAD) == (1)) {
        B_SAY(SELF, SELF, "$Dead");
        AI_PLAYANI(SELF, "T_DEAD");
        NPC_CHANGEATTRIBUTE(SELF, ATR_HITPOINTS, -(SELF.ATTRIBUTE[1]));
        HEISALREADYDEAD = 2;
    };
    return LOOP_CONTINUE;
}

func void ZS_STAND_DRINKING_POISON_END() {
    AI_USEITEMTOSTATE(SELF, 0x9562, -(1));
}

