const int SPL_COST_PALDESTROYEVIL = 60;
const int SPL_DAMAGE_PALDESTROYEVIL = 600;
instance SPELL_PALDESTROYEVIL(C_SPELL_PROTO) {
    C_SPELL_PROTO();
    TIME_PER_MANA = 0;
    DAMAGE_PER_LEVEL = SPL_DAMAGE_PALDESTROYEVIL;
    SPELLTYPE = SPELL_NEUTRAL;
}

func int SPELL_LOGIC_PALDESTROYEVIL(var int MANAINVESTED) {
    if ((NPC_GETACTIVESPELLISSCROLL(SELF)) && ((SELF.ATTRIBUTE[2]) >= (SPL_COST_SCROLL))) {
        return SPL_SENDCAST;
    };
    if ((SELF.ATTRIBUTE[2]) >= (SPL_COST_PALDESTROYEVIL)) {
        return SPL_SENDCAST;
    };
    return SPL_SENDSTOP;
}

func void SPELL_CAST_PALDESTROYEVIL() {
    if (NPC_GETACTIVESPELLISSCROLL(SELF)) {
        SELF.ATTRIBUTE[2] = (SELF.ATTRIBUTE[2]) - (SPL_COST_SCROLL);
    };
    SELF.ATTRIBUTE[2] = (SELF.ATTRIBUTE[2]) - (SPL_COST_PALDESTROYEVIL);
    SELF.AIVAR[20] += 1;
}

