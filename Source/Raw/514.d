const int SPL_COST_SUMMONZOMBIE = 80;
instance SPELL_SUMMONZOMBIE(C_SPELL_PROTO) {
    C_SPELL_PROTO();
    TIME_PER_MANA = 0;
    SPELLTYPE = SPELL_BAD;
    TARGETCOLLECTALGO = TARGET_COLLECT_NONE;
}

func int SPELL_LOGIC_SUMMONZOMBIE(var int MANAINVESTED) {
    if ((NPC_GETACTIVESPELLISSCROLL(SELF)) && ((SELF.ATTRIBUTE[2]) >= (SPL_COST_SCROLL2))) {
        return SPL_SENDCAST;
    };
    if ((SELF.ATTRIBUTE[2]) >= (SPL_COST_SUMMONZOMBIE)) {
        return SPL_SENDCAST;
    };
    return SPL_SENDSTOP;
}

func void SPELL_CAST_SUMMONZOMBIE() {
    if (NPC_GETACTIVESPELLISSCROLL(SELF)) {
        SELF.ATTRIBUTE[2] = (SELF.ATTRIBUTE[2]) - (SPL_COST_SCROLL2);
    };
    SELF.ATTRIBUTE[2] = (SELF.ATTRIBUTE[2]) - (SPL_COST_SUMMONZOMBIE);
    if (NPC_ISPLAYER(SELF)) {
        B_CHECKSUMMONEDSTATUS();
        WLD_SPAWNNPCRANGE(SELF, 0xc7f5, 1, 0x43fa0000);
    };
    WLD_SPAWNNPCRANGE(SELF, 0xc7d0, 1, 0x43fa0000);
    SELF.AIVAR[20] += 1;
}

