func void ZS_COOK_STOVE() {
    PERCEPTION_SET_NORMAL();
    B_RESETALL(SELF);
    AI_SETWALKMODE(SELF, NPC_WALK);
    if ((HLP_STRCMP(NPC_GETNEARESTWP(SELF), SELF.WP)) == (FALSE)) {
        AI_GOTOWP(SELF, SELF.WP);
    };
}

func int ZS_COOK_STOVE_LOOP() {
    if ((!(C_BODYSTATECONTAINS(SELF, BS_MOBINTERACT_INTERRUPT))) && (WLD_ISMOBAVAILABLE(SELF, "STOVE"))) {
        AI_USEMOB(SELF, "STOVE", 1);
    };
    if ((C_BODYSTATECONTAINS(SELF, BS_MOBINTERACT_INTERRUPT)) && ((NPC_GETSTATETIME(SELF)) > (5))) {
        RANDOM = HLP_RANDOM(3);
        if ((RANDOM) == (1)) {
            AI_PLAYANIBS(SELF, "T_STOVE_RANDOM_1", BS_MOBINTERACT_INTERRUPT);
        };
        NPC_SETSTATETIME(SELF, 0);
    };
    return LOOP_CONTINUE;
}

var int ZS_COOK_STOVE_LOOP.RANDOM = 0;
func void ZS_COOK_STOVE_END() {
    AI_USEMOB(SELF, "STOVE", -(1));
}

