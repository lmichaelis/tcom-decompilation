func int B_TEACHPLAYERTALENTFLETCHERY(var C_NPC SLF, var C_NPC OTH, var int TIER) {
    KOSTEN = B_GETLEARNCOSTTALENT(OTH, NPC_TALENT_FLETCHERY, TIER);
    if ((OTH.LP) < (KOSTEN)) {
        PRINTSCREEN(PRINT_NOTENOUGHLEARNPOINTS, -(1), -(1), FONT_SCREENSMALL, 2);
        B_SAY(SLF, OTH, "$NOLEARNNOPOINTS");
        return FALSE;
    };
    OTH.LP = (OTH.LP) - (KOSTEN);
    LOG_CREATETOPIC(TOPIC_TALENTFLETCHERY, LOG_NOTE);
    if ((TIER) == (1)) {
        PRINTSCREEN(PRINT_LEARNFLETCHERY, -(1), -(1), FONT_SCREEN, 2);
        B_LOGENTRY(TOPIC_TALENTFLETCHERY, TOPIC_TF_TIER01);
    };
    if ((TIER) == (2)) {
        PRINTSCREEN(PRINT_LEARNFLETCHERY2, -(1), -(1), FONT_SCREEN, 2);
        B_LOGENTRY(TOPIC_TALENTFLETCHERY, TOPIC_TF_TIER02);
    };
    if ((TIER) == (3)) {
        PRINTSCREEN(PRINT_LEARNFLETCHERY3, -(1), -(1), FONT_SCREEN, 2);
        B_LOGENTRY(TOPIC_TALENTFLETCHERY, TOPIC_TF_TIER03);
    };
    NPC_SETTALENTSKILL(OTH, NPC_TALENT_FLETCHERY, TIER);
    return TRUE;
}

var int B_TEACHPLAYERTALENTFLETCHERY.KOSTEN = 0;
