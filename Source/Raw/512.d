const int SPL_COST_SUMMONBEAR = 70;
instance SPELL_SUMMONBEAR(C_SPELL_PROTO) {
    C_SPELL_PROTO();
    TIME_PER_MANA = 0;
    TARGETCOLLECTALGO = TARGET_COLLECT_NONE;
}

func int SPELL_LOGIC_SUMMONBEAR(var int MANAINVESTED) {
    if ((NPC_GETACTIVESPELLISSCROLL(SELF)) && ((SELF.ATTRIBUTE[2]) >= (SPL_COST_SCROLL2))) {
        return SPL_SENDCAST;
    };
    if ((SELF.ATTRIBUTE[2]) >= (SPL_COST_SUMMONBEAR)) {
        return SPL_SENDCAST;
    };
    return SPL_SENDSTOP;
}

func void SPELL_CAST_SUMMONBEAR() {
    if (NPC_GETACTIVESPELLISSCROLL(SELF)) {
        SELF.ATTRIBUTE[2] = (SELF.ATTRIBUTE[2]) - (SPL_COST_SCROLL2);
    };
    SELF.ATTRIBUTE[2] = (SELF.ATTRIBUTE[2]) - (SPL_COST_SUMMONBEAR);
    if (NPC_ISPLAYER(SELF)) {
        B_CHECKSUMMONEDSTATUS();
        WLD_SPAWNNPCRANGE(SELF, 0xc482, 1, 0x43fa0000);
    };
    WLD_SPAWNNPCRANGE(SELF, 0xc483, 1, 0x43fa0000);
    SELF.AIVAR[20] += 1;
}

