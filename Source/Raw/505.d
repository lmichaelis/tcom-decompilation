const int SPL_COST_SUMMONDEMON = 120;
instance SPELL_SUMMONDEMON(C_SPELL_PROTO) {
    C_SPELL_PROTO();
    TIME_PER_MANA = 0;
    TARGETCOLLECTALGO = TARGET_COLLECT_NONE;
}

func int SPELL_LOGIC_SUMMONDEMON(var int MANAINVESTED) {
    if ((NPC_GETACTIVESPELLISSCROLL(SELF)) && ((SELF.ATTRIBUTE[2]) >= (SPL_COST_SCROLL3))) {
        return SPL_SENDCAST;
    };
    if ((SELF.ATTRIBUTE[2]) >= (SPL_COST_SUMMONDEMON)) {
        return SPL_SENDCAST;
    };
    return SPL_SENDSTOP;
}

func void SPELL_CAST_SUMMONDEMON() {
    if (NPC_GETACTIVESPELLISSCROLL(SELF)) {
        SELF.ATTRIBUTE[2] = (SELF.ATTRIBUTE[2]) - (SPL_COST_SCROLL3);
    };
    SELF.ATTRIBUTE[2] = (SELF.ATTRIBUTE[2]) - (SPL_COST_SUMMONDEMON);
    if (NPC_ISPLAYER(SELF)) {
        B_CHECKSUMMONEDSTATUS();
        WLD_SPAWNNPCRANGE(SELF, 0xc4c3, 1, 0x447a0000);
    };
    WLD_SPAWNNPCRANGE(SELF, 0xc4b8, 1, 0x447a0000);
    SELF.AIVAR[20] += 1;
}

